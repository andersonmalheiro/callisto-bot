{
	"compilerOptions": {
		"target": "ES2020",
		"incremental": true,
		"module": "CommonJS",
		"lib": ["ES2020"],
		"declaration": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"baseUrl": "./src/",
		"paths": {
			"@core": ["core/"],
			"@core/*": ["core/*"],
			"@commands": ["commands/"],
			"@commands/*": ["commands/*"],
			"@config": ["config/"],
			"@config/*": ["config/*"],
			"@interfaces": ["interfaces"],
			"@interfaces/*": ["interfaces/*"],
			"@events": ["events/"],
			"@events/*": ["events/*"],
			"@utils": ["utils"],
			"@utils/*": ["utils/*"]
		},
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
